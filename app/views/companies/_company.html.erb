<div id="<%= company.id %>" class="card mt-3">
  <div class="card-body d-flex justify-content-between">
    <%= company.name %>
    <div class="actions">
      <%= link_to 'Detail', company_path(company), class: 'btn btn-info btn-sm', data: { remote: true } %>
      <%= link_to 'Edit', edit_company_path(company), class: 'btn btn-secondary btn-sm', data: { remote: true } %>
      <%= link_to 'Delete', company_path(company), class: 'btn btn-danger btn-sm', data: { remote: true, method: :delete} %>
    </div>
  </div>
</div>